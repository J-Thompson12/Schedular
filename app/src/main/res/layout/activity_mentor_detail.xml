<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.justin.thompson.studentsched.MentorDetail">

    <TextView
        android:id="@+id/mentorDetailNumber"
        android:layout_width="233dp"
        android:layout_height="36dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/mentorDetailName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/mentorDetailEmail"
        android:layout_width="233dp"
        android:layout_height="36dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/mentorDetailNumber"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/mentorDetailName"
        android:layout_width="233dp"
        android:layout_height="36dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="29dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.503" />
</android.support.constraint.ConstraintLayout>
</ScrollView>