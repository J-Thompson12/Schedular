<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.justin.thompson.studentsched.CourseDetail"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/courseDetailTitle"
        android:layout_width="124dp"
        android:layout_height="34dp"
        android:textSize="24sp"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/courseDetailCode"
        android:layout_marginLeft="130dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/courseDetailEnd"
        android:layout_width="124dp"
        android:layout_height="34dp"
        android:layout_marginStart="33dp"
        android:textSize="24sp"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/courseDetailStart"
        app:layout_constraintLeft_toRightOf="@+id/textView10"
        android:layout_marginLeft="33dp" />

    <TextView
        android:id="@+id/courseDetailStatus"
        android:layout_width="125dp"
        android:layout_height="34dp"
        android:textSize="24sp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/courseDetailEnd"
        app:layout_constraintLeft_toRightOf="@+id/textView18"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp" />

    <TextView
        android:id="@+id/courseDetailStart"
        android:layout_width="124dp"
        android:layout_height="34dp"
        android:layout_marginStart="24dp"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/courseDetailTitle"
        app:layout_constraintLeft_toRightOf="@+id/textView16"
        android:layout_marginLeft="24dp" />

    <TextView
        android:id="@+id/courseDetailCode"
        android:layout_width="124dp"
        android:layout_height="34dp"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="130dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Date"
        android:textStyle="bold"
        android:layout_marginStart="40dp"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/textView16"
        android:layout_marginLeft="40dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Date"
        android:textStyle="bold"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="38dp"
        android:text="Title"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        app:layout_constraintRight_toLeftOf="@+id/courseDetailTitle"
        android:layout_marginRight="59dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Code"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="34dp"
        app:layout_constraintRight_toLeftOf="@+id/courseDetailCode"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.372"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mentors"
        android:textStyle="bold"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/courseDetailStatus"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="Status"
        android:textStyle="bold"
        android:layout_marginLeft="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <ListView
        android:id="@+id/courseDetailLV"
        android:layout_width="340dp"
        android:layout_height="194dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />
</android.support.constraint.ConstraintLayout>
</ScrollView>