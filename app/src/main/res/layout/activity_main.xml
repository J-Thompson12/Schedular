<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.justin.thompson.studentsched.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/termBtn"
        android:layout_width="175dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#5e76e1"
        android:clickable="true"
        android:text="Terms"
        android:title="@string/scheduler"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="54dp"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="openTerms"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/courseBtn"
        android:layout_width="175dp"
        android:layout_height="48dp"
        android:layout_alignLeft="@+id/termBtn"
        android:layout_alignStart="@+id/termBtn"
        android:layout_below="@+id/termBtn"
        android:layout_marginTop="56dp"
        android:background="#5e76e1"
        android:text="Courses"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mentorBtn"
        tools:layout_constraintTop_creator="1"
        android:onClick="openCourses" />

    <Button
        android:id="@+id/mentorBtn"
        android:layout_width="175dp"
        android:layout_height="48dp"
        android:layout_alignLeft="@+id/courseBtn"
        android:layout_alignStart="@+id/courseBtn"
        android:layout_below="@+id/courseBtn"
        android:layout_marginTop="55dp"
        android:background="#5e76e1"
        android:text="Mentors"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/termBtn"
        tools:layout_constraintTop_creator="1"
        android:onClick="openMentors" />

</android.support.constraint.ConstraintLayout>
</ScrollView>