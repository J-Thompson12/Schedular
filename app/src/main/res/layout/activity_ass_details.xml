<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.justin.thompson.studentsched.AssDetails">

    <TextView
        android:id="@+id/assDetailsType"
        android:layout_width="118dp"
        android:layout_height="25dp"
        android:layout_marginLeft="133dp"
        android:layout_marginTop="16dp"
        android:text="Type"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/assDetails"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="23dp"
        android:text="Details"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/assDetailsType" />

    <TextView
        android:id="@+id/assDetailsGoal"
        android:layout_width="123dp"
        android:layout_height="58dp"
        android:layout_marginLeft="131dp"
        android:layout_marginTop="27dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/assDetails" />
</android.support.constraint.ConstraintLayout>
</ScrollView>